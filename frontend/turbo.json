{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**"]
    },
    "test": {
      "inputs": ["src/**/*.{ts,tsx}"]
    },
    "lint": {
      "inputs": ["src/**/*.{ts,tsx}", ".eslintrc.cjs"]
    },
    "lintcheck": {
      "inputs": ["src/**/*.{ts,tsx}", ".eslintrc.cjs"]
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [
    "configs/typescript/base.json",
    "configs/eslint/.eslintrc.cjs",
    "dprint.json"
  ]
}
