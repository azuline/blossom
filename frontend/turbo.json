{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    // topology is a dummy key to ensure that changes in dependencies result in a cache miss.
    "topology": {
      "dependsOn": ["^topology"]
    },
    // typecheck transpiles .ts files into output .js and .d.ts files and checks for correctness.
    "typecheck": {
      "outputs": ["dist/**", "*.tsbuildinfo"],
      "inputs": ["package.json", "src/**/*.{ts,tsx}", "tsconfig.json"],
      "dependsOn": ["^topology"],
      "outputMode": "errors-only"
    },
    "build": {
      "outputs": ["dist/**"],
      "inputs": ["package.json", "src/**/*.{ts,tsx}", "tsconfig.json", "vite.config.ts"],
      "dependsOn": ["^topology", "^build", "^typecheck"]
    },
    "test": {
      "inputs": ["package.json", "src/**/*.{ts,tsx}", "vitest.config.ts"],
      "dependsOn": ["^topology", "@configs/vitest#typecheck"],
      "outputMode": "errors-only"
    },
    "lint": {
      "inputs": ["package.json", "src/**/*.{ts,tsx}", ".eslintrc.cjs"],
      // Depends on successfully building .d.ts files.
      "dependsOn": ["^topology", "^typecheck"],
      "outputMode": "errors-only"
    },
    "lintcheck": {
      "inputs": ["package.json", "src/**/*.{ts,tsx}", ".eslintrc.cjs"],
      // Depends on successfully building .d.ts files.
      "dependsOn": ["^topology", "^typecheck"],
      "outputMode": "errors-only"
    },
    "clean": {
      "cache": false,
      "outputMode": "errors-only"
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "typewatch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^typecheck"]
    }
  },
  "globalDependencies": [
    "dprint.json",
    "scripts/*"
  ]
}
